@model QuestAdventure.Models.Aluno
@{
	Layout = "Professor/_LayoutProfessorTelaAluno";
}

<h1>Cadastrar Aluno</h1>


<form>
	<div class="form-group">
		<label asp-for="Nome" class="control-label">Nome</label>
		<input asp-for="Nome" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Email" class="control-label">Email</label>
		<input asp-for="Email" class="form-control" />
	</div>

	<input type="submit" asp-action="AdicionarAluno" value=" Cadastrar Aluno" class="btn btn-primary" />
	<input type="submit" asp-action="CadastrarAluno" value=" Finalizar Cadastro" class="btn btn-primary" />

</form>


<table class="table">
	<thead>
		<tr>
			<th>Alunos </th>
		</tr>
	</thead>
	<tbody>
		@if (QuestAdventure.Controllers.UserManager.alunos != null)
		{
			@foreach (var row in QuestAdventure.Controllers.UserManager.alunos)
			{
				<tr>
					<td>@row.Nome</td>
					<td>@row.Email</td>
					<td>
						@Html.ActionLink("Delete","DeleteAluno", new { aluno = row.Email })
					</td>
				</tr>
			}
		}
	</tbody>
</table>

	<h4>
        <font color="red">
        @Html.ValidationSummary()
        </font>
    </h4>